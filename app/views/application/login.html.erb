<div style="text-align: center; margin: 20px auto; width: 300px">
  <div style="text-align: left">
    <h2>Login</h2>

    <%= form_tag '/admin', :class => 'form' do %>
      <p>Username<%= text_field_tag 'username' %></p>
      <p>Password<%= password_field_tag 'password' %></p>
      <p><%= submit_tag 'Login', :class => 'button' %></p>
    <% end %>
  </div>
</div>